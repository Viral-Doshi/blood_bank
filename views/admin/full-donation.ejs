</head>

<body>
    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="../assets/img/logo/loder.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
    </header>
    <main>
        <section class="login-form-area section-bg  pt-115 pb-120 fix">
            <div class="container">
                <div class="row justify-content-center">
                    <!-- login wrapper -->
                    <div class="col-12">
                        <div class="login-form-wrapper">
                            <!-- From title -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Section Tittle -->
                                    <div class="section-tittle mb-50">
                                        <h2>Donated Blood Record</h2>
                                        <p></p>
                                    </div>
                                </div>
                            </div>
                            <!-- form -->
                            <form action="/edit/edit-donation" method="post">
                                <input type="hidden" style="width:500px;" name="DID" value="<%=DID%>"   >
                                <table class="table table-striped record">
                                    <tr>
                                        <td>Donation Number</td>
                                        <td><%=donation[0].DID%></td>
                                    </tr>
                                    <tr>
                                        <td>Donor's Name</td>
                                        <td><%=donation[0].full_name%></td>
                                    </tr>
                                    <tr>
                                        <td>Blood Bag ID</td>
                                        <td><input type="text" size="10" name="bbid"placeholder="<%=donation[0].BBID%>" value="<%=donation[0].BBID%>" required disabled class="editable"></td>
                                    </tr>

                                    <tr>
										<td>Blood Type</td>
										<td>
                                            <select id="blood_group_select" name="blood_type" required disabled class="editable dis-select">
        										<option value="A+">A+</option>
        										<option value="AB+">AB+</option>
        										<option value="B+">B+</option>
        										<option value="O+">O+</option>
        										<option value="A-">A-</option>
        										<option value="AB-">AB-</option>
        										<option value="B-">B-</option>
        										<option value="O-">O-</option>
    									    </select>
			                                <script>document.getElementById("blood_group_select").value="<%=donation[0].blood_group%>";</script>
                                        </td>
									</tr>
                                    <tr>
                                        <td>Donation Date</td>
                                        <td><input type="date" size="10" name="date" value="<%=donation[0].donation_date.getFullYear()%>-<%=('0'+(donation[0].donation_date.getMonth()+1)).slice(-2)%>-<%=('0'+(donation[0].donation_date.getDate())).slice(-2)%>" required disabled class="editable"></td>
                                    </tr>
                                    <tr>
                                        <td><b>Test Results</b></td>
                                        <td></td>
                                    </tr>
                                    <tr>
										<td>Haemoglobin Level</td>
										<td>
                                            <input id="haemo-normal" type="radio" name="blood_test_1" value="1" disabled class="editable">
                                            <label for="haemo-normal" class="mr-50">Normal</label>
                                            <input id="haemo-not-normal" type="radio" name="blood_test_1" value="0" disabled class="editable">
                                            <label for="haemo-not-normal">Not-Normal</label>
          								    <%if(donation[0].haemoglobin=="1"){%>
          									  <script>document.getElementById("haemo-normal").checked = "true";</script>
          								    <%}else {%>
          									  <script>document.getElementById("haemo-not-normal").checked = "true";</script>
          								    <%}%>
                                        </td>
									</tr>
                                    <tr>
										<td>Blood Pressure</td>
										<td>
                                            <input id="bp-normal" type="radio" name="blood_test_2" value="1" disabled class="editable">
                                            <label for="bp-normal" class="mr-50">Normal</label>
                                            <input id="bp-not-normal" type="radio" name="blood_test_2" value="0" disabled class="editable">
                                            <label for="bp-not-normal">Not-Normal</label>
          								    <%if(donation[0].BP=="1"){%>
          									  <script>document.getElementById("bp-normal").checked = "true";</script>
          								    <%}else {%>
          									  <script>document.getElementById("bp-not-normal").checked = "true";</script>
          								    <%}%>
                                        </td>
									</tr>
                                    <tr>
										<td>Temperature Level</td>
										<td>
                                            <input id="temperature-normal" type="radio" name="blood_test_3" value="1" disabled class="editable">
                                            <label for="temperature-normal" class="mr-50">Normal</label>
                                            <input id="temperature-not-normal" type="radio" name="blood_test_3" value="0" disabled class="editable">
                                            <label for="temperature-not-normal">Not-Normal</label>
          								    <%if(donation[0].temp=="1"){%>
          									  <script>document.getElementById("temperature-normal").checked = "true";</script>
          								    <%}else {%>
          									  <script>document.getElementById("temperature-not-normal").checked = "true";</script>
          								    <%}%>
                                        </td>
									</tr>
                                    <tr>
										<td>Pulse Rate</td>
										<td>
                                            <input id="pulse-normal" type="radio" name="blood_test_4" value="1" disabled class="editable">
                                            <label for="pulse-normal" class="mr-50">Normal</label>
                                            <input id="pulse-not-normal" type="radio" name="blood_test_4" value="0" disabled class="editable">
                                            <label for="pulse-not-normal">Not-Normal</label>
          								    <%if(donation[0].pulse=="1"){%>
          									  <script>document.getElementById("pulse-normal").checked = "true";</script>
          								    <%}else {%>
          									  <script>document.getElementById("pulse-not-normal").checked = "true";</script>
          								    <%}%>
                                        </td>
									</tr>
                                </table>
                                <div class="container">
                                    <div class="row justify-content-between">
                                        <button type="button" onclick="edit_btn()" class="genric-btn info circle" id="btn-edit">Edit</button>
                                        <button type="button" onclick="cancel_btn()" class="genric-btn info" id="btn-cancel">Cancel</button>
                                        <button type="submit"name="submit" value="update" onclick="return confirm('Do you really want to update?');" class="genric-btn info" id="btn-update">Update</button>
                                        <button type="submit" name="submit" value="delete" onclick="return confirm('Do you really want to delete?');" class="genric-btn danger" id="btn-delete">Delete</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
    </footer>

