  <main>
    <section class="login-form-area section-bg  pt-115 pb-120 fix">
      <div class="container">
        <div class="row justify-content-center">
          <!-- login wrapper -->
          <div class="col-12">
            <div class="login-form-wrapper">
              <!-- From title -->
              <div class="row">
                <div class="col-lg-12">
                  <!-- Section Tittle -->
                  <div class="section-tittle mb-50">
                    <h2>New Person</h2>
                    <p>Create new account for a user.</p>
                  </div>
                </div>
              </div>
              <!-- form -->
              <form autocomplete="off" action="/admin/add-people" method="post">
                <table class="table table-striped record">
                  <tr>
                    <td>Full Name</td>
                    <td><input type="text" size="50" name="name" placeholder="Full Name" required></td>
                  </tr>
                  <tr>
                    <td>Phone Number</td>
                    <td><input type="text" size="50" name="phone" placeholder="Phone Number" required></td>
                  </tr>
                  <tr>
                    <td>Blood Group</td>
                    <td>
						<select id="blood_group_select" name="blood_group" required>
							<option value="" disabled selected>Blood Group</option>
							<option value="A+">A+</option>
							<option value="AB+">AB+</option>
							<option value="B+">B+</option>
							<option value="O+">O+</option>
							<option value="A-">A-</option>
							<option value="AB-">AB-</option>
							<option value="B-">B-</option>
							<option value="O-">O-</option>
						</select>
					</td>
                  </tr>
                  <tr>
                    <td>Date Of Birth</td>
                    <td><input type="date" name="dob" required></td>
                  </tr>
                  <tr>
                    <td>Gender</td>
                    <td>
                      <input type="radio" id="male" name="gender" value="male">
                      <label for="male" class="mr-50">Male</label>
                      <input type="radio" id="female" name="gender" value="female">
                      <label for="female">Female</label>
                    </td>
                  </tr>
                  <tr>
                    <td>Email-ID</td>
                    <td><input type="email" size="40" name="email" placeholder="Email" autocomplete="off" required></td>
                  </tr>
                  <tr>
                    <tr>
                      <td>Password</td>
                      <td><input type="password" name="password" size="40" placeholder="password" autocomplete="new-password" required></td>
                    </tr>
                    <td>OTP Verification</td>
                    <td>
                      <input type="radio" id="yes" name="otp" value="1">
                      <label for="yes" class="mr-50">Yes</label>
                      <input type="radio" id="no" name="otp" value="0">
                      <label for="no">No</label>
                    </td>
                  </tr>
                  <tr>
                    <td>User Type</td>
                    <td>
                      <input type="radio" id="normal" name="user_type" value="normal" checked>
                      <label for="normal" class="mr-50">Normal</label>
                      <input type="radio" id="data-entry" name="user_type" value="data-entry">
                      <label for="data-entry" class="mr-50">Data-Entry</label>
                      <input type="radio" id="admin" name="user_type" value="admin">
                      <label for="admin" class="mr-50">Admin</label>
                    </td>
                  </tr>
				  <tr>
					<td rowspan="2">Donor</td>
					<td>Do you want to add Donor Details?</td>
				  </tr>
				  <tr>
					<td>
						<input id="add-donor-yes" type="radio" name="add_donor" onclick="toggle_class('show-on-add-donor-yes','table-row');toggle_required('set-require',true)" value="1"  />
						<label for="add-donor-yes" class="mr-50">Yes</label>
						<input id="add-donor-no" type="radio" name="add_donor" onclick="toggle_class('show-on-add-donor-yes','none');toggle_required('set-require',false)" value="0" checked  />
						<label for="add-donor-no">No</label>
					</td>
				  </tr>
				  <!-- Hide donor details if donor record not available and radio is no -->
				  <style>.show-on-add-donor-yes{ display: none; }</style>
				  <tr class="show-on-add-donor-yes">
					<td>Height</td>
					<td><input type="text" name="height" size="15" placeholder="Height (in cms)" value="" class="set-require"></td>
				  </tr>
				  <tr class="show-on-add-donor-yes">
					<td>Weight</td>
					<td><input type="text" name="weight" size="15" placeholder="Weight (in kgs)" value="" class="set-require"></td>
				  </tr>
				  <tr class="show-on-add-donor-yes">
					<td>Next Safe Donation</td>
					<td><input type="date" name="next_donation_date" value="" class="set-require"></td>
				  </tr>
				  <tr class="show-on-add-donor-yes">
					<td>Previous Notified</td>
					<td><input type="date" name="previous_sms_date" value=""></td>
				  </tr>
                </table>
                <div class="container">
                 <div class="row justify-content-between">
                  <button type="submit" class="genric-btn info circle">Submit</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
