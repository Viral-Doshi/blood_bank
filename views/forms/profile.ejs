    <section id="history" class="d-flex align-items-center mb-50">

        <div class="container display-logged-in ">
            <h2 class="row d-flex justify-content-center mb-50">Your Previous Donations / Requests</h2>
       <!-- display all donations and request using javascript -->
             <div class="scroll-box">
                <!-- start displaying records -->
								<%for(var i=0;i<donations.length;i++){%>
                <div class="record">
                    <div class="container">
                         <!-- type of record -->
                        <h4 class="row justify-content-start">Donation</h4>

                        <div class="row justify-content-between">
                                <p class="col-xs-6">Donated On : <%=('0'+(donations[i].donation_date.getDate())).slice(-2)%>-<%=('0'+(donations[i].donation_date.getMonth()+1)).slice(-2)%>-<%=donations[i].donation_date.getFullYear()%></p>
                                <!-- <p class="col-xs-6"> Amount-Donated : </p> -->
                        </div>
                        <div class="row justify-content-between">

                                <p class="col-xs-4">Hemoglobin : <%if(donations[i].haemoglobin=="1"){%> Normal <%} else {%> Not Normal <%}%></p>
                                <p class="col-xs-4">BP : <%if(donations[i].BP=="1"){%> Normal <%} else {%> Not Normal <%}%></p>
                                <p class="col-xs-4">Temprature : <%if(donations[i].temp=="1"){%> Normal <%} else {%> Not Normal <%}%></p>
                                <p class="col-xs-4">Pulse : <%if(donations[i].pulse=="1"){%> Normal <%} else {%> Not Normal <%}%></p>
                        </div>
                        <div class="row justify-content-between">
                                <!-- <p class="col-xs-4">Location : </p> -->
                        </div>
                    </div>
                </div>
								<%}%>

								<%for(var i=0;i<requests.length;i++){%>
                <div class="record">
                    <div class="container">
                         <!-- type of record -->
                        <h4 class="row justify-content-start">Request</h4>
                        <div class="row justify-content-between">
                                <p class="col-xs-6">Requested On : <%=('0'+(requests[i].request_date.getDate())).slice(-2)%>-<%=('0'+(requests[i].request_date.getMonth()+1)).slice(-2)%>-<%=requests[i].request_date.getFullYear()%></p>
                                <p class="col-xs-6"> Amount-Requested : <%=requests[i].quantity%></p>
                        </div>
                        <div class="row justify-content-between">
							<p class="col-xs-4">Receiver's Name : <%=requests[i].receiver_name%></p>
                                <p class="col-xs-4">Receiver's Blood Type : <%=requests[i].blood_group%></p>
                                <p class="col-xs-4">Status : <%if(requests[i].accepted=="1"){%> Accepted <%} else if(requests[i].accepted=="-1"){%> Rejected <%} else {%> Unread <%}%></p>
                        </div>
                        <div class="row justify-content-between">
                                <p class="col-xs-4">Purpose : <%=requests[i].purpose%></p>
                        </div>
                    </div>
                </div>
								<%}%>
                <!-- All records ends here -->
				<%if(donations.length==0 && requests.length==0){%>
					<!-- nothing to show here -->
					<div class="container justify-content-center mt-50 mb-50">
						<div class="text-center d-flex justify-content-center">
							<h3 style="font-family:monospace;">You Don't have any Past Donations/Requests</h3>
						</div>
					</div>
				<%}%>
          </div>
        </div>
    </section>
